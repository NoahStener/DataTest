@model DataTest.ViewModel.HomeViewModel

<h2 class="welcome-title">Welcome to Your Energy Dashboard</h2>

<div class="welcome-container">
    <p class="welcome-text">Monitor your household's energy consumption, analyze usage patterns, and discover ways to save on your electricity bill.</p>

    <!-- Snabb översikt med nyckelinformation -->
    <div class="key-info">
        <div class="info-card">
            <h4>Weekly Energy Usage</h4>
            <p><strong>Total:</strong> @Model.DailyConsumption.Sum(d => d.TotalEnergyOutlet).ToString("0.##") kWh</p>
            <p><strong>Average Daily Usage:</strong> @Model.DailyConsumption.Average(d => d.TotalEnergyOutlet).ToString("0.##") kWh</p>
        </div>
        <div class="info-card">
            <h4>Current Electricity Price</h4>
            <p>@Model.CurrentElectricityPrice.ToString("0.##") SEK/kWh - Check today's prices for cost-effective usage!</p>
            <a href="@Url.Action("CalculateCost", "Appliance")" class="btn btn-secondary">Check Prices</a>
        </div>
    </div>

    <!-- Navigationskort för viktiga funktioner -->
    <div class="navigation-cards">
        <div class="nav-card">
            <h4>Energy Overview</h4>
            <p>Get a complete view of your household's energy consumption over time.</p>
            <a href="@Url.Action("Index", "Energy")" class="btn btn-primary">View Energy Overview</a>
        </div>
        <div class="nav-card">
            <h4>Calculate Energy Costs</h4>
            <p>Analyze appliance usage times and optimize your energy consumption to save money.</p>
            <a href="@Url.Action("CalculateCost", "Appliance")" class="btn btn-primary">Calculate Costs</a>
        </div>
    </div>
</div>





